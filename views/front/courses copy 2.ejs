          const videoModal = document.getElementById('videoModal')
          if (videoModal) {
            videoModal.addEventListener('show.bs.modal', event => {
              // Button that triggered the modal
              const button = event.relatedTarget
              // Extract info from data-bs-* attributes
              const link = button.getAttribute('data-bs-link')

              // Update the modal's content.
              const modalBody = videoModal.querySelector('.modal-body #vodeoElement')

              modalBody.src = link
              document.getElementById('courseVid').load()
            })
            videoModal.addEventListener('hide.bs.modal', event => {
              document.getElementById('courseVid').pause()
            })
          }
        </script>

        <script>
          function setActive(selectedButton) {
            // Remove active class from all buttons
            document.querySelectorAll(".filter-button").forEach(button => {
              button.classList.remove("active");
              let indicator = button.querySelector(".active-indicator");
              if (indicator) indicator.remove(); // Remove indicator if exists
            });

            // Add active class to the clicked button
            selectedButton.classList.add("active");

            // Add active indicator dynamically
            let indicator = document.createElement("div");
            indicator.classList.add("active-indicator");
            selectedButton.appendChild(indicator);
          }
        </script>
