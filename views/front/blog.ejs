  <script>
  document.addEventListener("DOMContentLoaded", function () {
  const hiddenText = document.querySelector(".hidden-text"); // Target the hidden text
  const toggleMore = document.getElementById("toggle-more"); // Target the toggle-more span

  if (hiddenText && toggleMore) {
    // Function to check if text is truncated
    function isTextTruncated(element) {
      const computedStyle = window.getComputedStyle(element);
      const lineHeight = parseFloat(computedStyle.lineHeight); // Get line height
      const maxLines = 4; // Limit to 4 lines
      const actualLines = Math.ceil(element.scrollHeight / lineHeight); // Calculate actual lines

      return actualLines > maxLines; // True if text exceeds 4 lines
    }

    // Function to handle toggle-more visibility and text
    function handleToggleVisibility() {
      if (isTextTruncated(hiddenText)) {
        toggleMore.classList.remove("see-more-hidden");
        toggleMore.classList.add("see-more-visible");
      } else {
        toggleMore.classList.remove("see-more-visible");
        toggleMore.classList.add("see-more-hidden");
      }
    }

    // Initial visibility check
    handleToggleVisibility();

    // Event listener for toggleMore click
    toggleMore.addEventListener("click", function () {
      if (hiddenText.classList.contains("hidden-text")) {
        hiddenText.classList.remove("hidden-text");
        hiddenText.classList.add("show-text"); // Add show-text class to remove line limit
        toggleMore.textContent = "See less..."; // Update toggleMore text
      } else {
        hiddenText.classList.remove("show-text");
        hiddenText.classList.add("hidden-text"); // Reapply hidden-text class
        toggleMore.textContent = "See more..."; // Update toggleMore text
      }
    });
  }
});

