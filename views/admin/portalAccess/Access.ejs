    <script>

        document.addEventListener('change', function (event) {
            // Any checkbox reference
            const anyCheckboxCourse = document.querySelector('.course__checkbox[data-name="Any"]');
            const allCourses = document.querySelectorAll('.course__checkbox:not([data-name="Any"])');
            const selectAll = document.getElementById('select__all__courses');

            // âœ… If "Any" clicked
            if (event.target === anyCheckboxCourse && anyCheckboxCourse.checked) {
                // Uncheck all courses & Select All
                allCourses.forEach(cb => cb.checked = false);
                selectAll.checked = false;
            }

            // âœ… If "Select All" clicked
            if (event.target === selectAll && selectAll.checked) {
                // Uncheck "Any"
                anyCheckboxCourse.checked = false;
                // Check all courses
